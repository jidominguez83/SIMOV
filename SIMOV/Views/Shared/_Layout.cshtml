<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SIBL</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Styles/Titulo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Styles/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body data-bs-theme="light">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-body-tertiary border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SIBL</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @{

                        if (bool.Parse(Session["Menu_Movimientos"].ToString()) == true)
                        {
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                            </a>
                                            <ul class="dropdown-menu">
                                                @Html.ActionLink("Administrador", "ListaMovimientos", "Movimientos", new { area = "" }, new { @class = "nav-link" })
                                                @Html.ActionLink("Captura", "Captura", "Movimientos", new { area = "" }, new { @class = "nav-link" })

                                            </ul>
                                            
                                            
                                           

                                        </li>
                        }


                    }
                    @*<li class="nav-item">

                        </li>*@
                </ul>

                <!-- Right Side Of Navbar -->
                <ul class="navbar-nav ms-auto">
                    <!-- Authentication Links -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-controller="Solicitud" asp-action="RegistroInfo">
                            <i class="bi bi-person-circle"></i>&nbsp;
                            @Session["userName"].ToString()
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-controller="Solicitud" asp-action="RegistroInfo">
                                    <i class="bi bi-box-arrow-right"></i>&nbsp;
                                    Cerrar sesión
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <button type="button" class="btn rounded-fill" onclick="changeTheme()"><i id="dl-icon" class="bi bi-moon-fill"></i></button>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row align-items-start text-center">
            <div class="col">
                <img alt="" src="https://appcgia.seslp.gob.mx/Imagenes/rep_imagenes/Master/logo_SEGE-trans.png" border="0" />
                <img alt="" src="https://appcgia.seslp.gob.mx/Imagenes/rep_imagenes/Master/FondoEncabezado2.png" border="0" />

                @*<img alt="" src="~/Imagenes/rep_imagenes/Master/logo_SEGE-trans.png" border="0" />
                    <img alt="" src="~/Imagenes/rep_imagenes/Master/FondoEncabezado2.png" border="0" />*@

            </div>
        </div>
        <div class="row align-items-start text-center">
            @*<h6>SISTEMA INTEGRAL DE BAJAS Y LICENCIAS</h6>*@
        </div>
        <main role="main" class="pb-3 mt-3">
            @*<partial name="/_Messages" />*@
            @Html.Partial("_Messages")
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @Html.Partial("_Footer")

        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/site.js" asp-append-version="true"></script>
    <script src="~/Scripts/theme.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
   
    @RenderSection("scripts", required: false)
</body>
</html>
